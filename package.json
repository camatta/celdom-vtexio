    "*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "@vtex/prettier-config": "0.1.4",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-vtex": "12.3.2",
    "eslint-config-vtex-react": "6.3.2",
    "prettier": "1.19.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "react-slick": "^0.30.3",
    "slick-carousel": "^1.8.1",
    "swiper": "^11.2.8"
  }
}
